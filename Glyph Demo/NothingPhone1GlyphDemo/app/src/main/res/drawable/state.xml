<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- This is the drawable that will be used when the button is pressed -->
        <shape>
            <solid android:color="#FF0000"/> <!-- Change this to the color you want when the button is pressed -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <!-- This is the default drawable that will be used -->
        <shape>
            <solid android:color="#0000FF"/> <!-- Change this to the default color of the button -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>